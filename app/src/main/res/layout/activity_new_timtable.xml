<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="32dp"
        tools:srcCompat="@drawable/usericon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:text="Hello!"
        android:textStyle="bold"
        android:textColor="@color/mediumgrey"
        app:layout_constraintLeft_toRightOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="16dp"
        android:text="Teran Sarathchandra"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/top_background"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="Time Table"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/lightgrey"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="Feb"
            android:textColor="@color/mediumgrey"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            >
        </TextView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="45dp"
            android:text="23"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="bold"
            >
        </TextView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="90dp"
            android:text="Fri"
            android:textColor="@color/mediumgrey"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            >
        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/purple"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toRightOf="@+id/cardview1"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="Feb"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            >
        </TextView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="45dp"
            android:text="24"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="bold"
            >
        </TextView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="90dp"
            android:text="Sat"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            >
        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview3"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/lightgrey"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toRightOf="@+id/cardview2"
        >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="Feb"
            android:textColor="@color/mediumgrey"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            >
        </TextView>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="45dp"
            android:text="25"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="bold"
            >
        </TextView>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="90dp"
            android:text="Sun"
            android:textColor="@color/mediumgrey"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            >
        </TextView>

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/editTextTaskName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:ems="10"
        android:inputType="text"
        android:text="Subject Name"
        android:paddingLeft="20dp"
        android:textColor="@color/purple"
        android:background="@drawable/background_btn_2"
        app:layout_constraintTop_toBottomOf="@+id/cardview1"
        >
    </EditText>

    <EditText
        android:id="@+id/editTextStartTime"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/background_btn_2"
        android:ems="10"
        android:inputType="time"
        android:paddingLeft="20dp"
        android:text="Start Time"
        android:textColor="@color/purple"
        android:drawableEnd="@drawable/timer_purple"
        android:paddingRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/editTextEndTime"
        app:layout_constraintTop_toBottomOf="@+id/editTextTaskName">
    </EditText>

    <EditText
        android:id="@+id/editTextEndTime"
        android:layout_width="152dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/background_btn_2"
        android:ems="10"
        android:inputType="time"
        android:paddingLeft="20dp"
        android:text="End Time"
        android:textColor="@color/purple"
        android:drawableEnd="@drawable/timer_purple"
        android:paddingRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTaskName">
    </EditText>

    <EditText
        android:id="@+id/editTextTaskCategory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:ems="10"
        android:inputType="text"
        android:text="Lecture Hall"
        android:paddingLeft="20dp"
        android:textColor="@color/purple"
        android:background="@drawable/background_btn_2"
        app:layout_constraintTop_toBottomOf="@+id/editTextStartTime"
        >
    </EditText>

    <EditText
        android:id="@+id/editTextTaskVenue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:ems="10"
        android:inputType="text"
        android:text="Lecturer Name"
        android:paddingLeft="20dp"
        android:textColor="@color/purple"
        android:background="@drawable/background_btn_2"
        app:layout_constraintTop_toBottomOf="@+id/editTextTaskCategory"
        >
    </EditText>

    <EditText
        android:id="@+id/editTextTaskOccurance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:ems="10"
        android:inputType="textAutoComplete"
        android:text="Daily / Weekly"
        android:drawablePadding="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="8dp"
        android:drawableEnd="@drawable/dropdown_purple"
        android:textColor="@color/purple"
        android:background="@drawable/background_btn_2"
        app:layout_constraintTop_toBottomOf="@+id/editTextTaskVenue"
        >
    </EditText>

    <EditText
        android:id="@+id/editTextRemindBefore"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:ems="10"
        android:inputType="textAutoComplete"
        android:text="Remind Before"
        android:drawablePadding="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="8dp"
        android:drawableEnd="@drawable/dropdown_purple"
        android:textColor="@color/purple"
        android:background="@drawable/background_btn_2"
        app:layout_constraintTop_toBottomOf="@+id/editTextTaskOccurance"
        >
    </EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="Add to Time Table"
        android:background="@drawable/background_btn_1"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/editTextRemindBefore"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>